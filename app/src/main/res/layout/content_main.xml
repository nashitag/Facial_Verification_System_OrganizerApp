<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animate"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sutd"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:src="@drawable/sutd"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="240dp"/>

    <TextView
        android:id="@+id/text_welcome"
        android:layout_width="197dp"
        android:layout_height="48dp"
        android:layout_marginLeft="-197dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/round"
        android:fadingEdge="horizontal|vertical"
        android:fontFamily="serif"
        android:text="Welcome"
        android:textAlignment="center"
        android:textColor="#E4E5E6"
        android:textSize="30dp"
        app:fontFamily="sans-serif-smallcaps" />


    <Button
        android:id="@+id/update_firebase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="208dp"
        android:text="Update Firebase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/othertext"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="500dp"
        android:layout_marginTop="650dp"
        android:background="@drawable/round"
        android:text="ISTD Exhibition 2018"
        android:paddingTop="20dp"
        android:textAlignment="center"
        android:textColor="#E4E5E6"
        android:textSize="30dp"
        app:fontFamily="sans-serif-smallcaps"
        android:fadingEdge="horizontal|vertical"
        android:bottomRightRadius="20dp"
        android:bottomLeftRadius="20dp"
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"/>

    <TextView
        android:id="@+id/othertext_info"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="500dp"
        android:layout_marginTop="650dp"
        android:text="Sophomore students showcase their Design Projects from 50.001 Introduction to Information Systems and Programming and 50.002 Computation Structures.
In 50.001 Introduction to Information Systems and Programming, the students showcase design projects related to Internet of Things (IoT). Prototypes demonstrate how connectivity, software and hardware can improve our lives and solve problems that we face every day."
        android:paddingTop="70dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAlignment="center"
        android:textColor="#E4E5E6"
        android:textSize="15dp"
        app:fontFamily="sans-serif"
        android:fadingEdge="horizontal|vertical"
        />




    <Button
        android:id="@+id/button_reg"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/animate_button"
        android:text="Registered"
        android:textColor="#e3eeff"
        android:bottomRightRadius="100dp"
        android:bottomLeftRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"

        />

    <Button
        android:id="@+id/button_bl"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/animate_button"
        android:text="Blacklist"
        android:textColor="#e3eeff"
        android:bottomRightRadius="100dp"
        android:bottomLeftRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"

        />
    <Button
        android:id="@+id/button_ov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/animate_button"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="See Overview"
        android:textColor="#e3eeff"
        android:bottomRightRadius="100dp"
        android:bottomLeftRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"

        />



</FrameLayout>